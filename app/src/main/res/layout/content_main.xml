<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="15dp"
    android:background="#2196F3"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/gasTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gas_value"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <SeekBar
        android:id="@+id/gasSeekBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:max="1000"
        android:progress="1"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="137dp" />

    <TextView
        android:id="@+id/etanolTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/etanol_value"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <SeekBar
        android:id="@+id/etanolSeekBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:max="1000"
        android:progress="1"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="280dp" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calculate" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/resultTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:background="#CAD0EF"
        android:hint="@string/best_choice"
        android:textColorHint="#19931E">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/resultInputEditText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="30sp" />

    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>